?>

<div class="item">
    <div class="itm-hld"
        <?php

        if ($block->getExportUrl() && !$block->getExportType()) {
            $action = 'window.open(\'' . $block->escapeUrl($block->getExportUrl()) . '\')';
        } else {
            if ($block->getExportPath()) {
                $url = $block->getUrl($block->getExportPath());
            } else {
                $url = $block->getUrl('shopifyblogexport/export/form', ['type' => $block->getExportType()]);
            }
            $action = 'window.location=\'' .  $block->escapeUrl($url) . '\'';
        } ?>
         onclick="<?= $action ?>">
        <img class="img"
             src="<?= $block->escapeUrl($block->getViewFileUrl($block->getImage())) ?>" />
        <br/>
        <span class="lable"><?= $block->escapeHtml(__($block->getLabel())) ?><br/><br/></span>
    </div>
</div>
